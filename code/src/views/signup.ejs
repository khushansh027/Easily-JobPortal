  <!-- Main Body -->
  <div class="d-flex justify-content-center align-items-center" style="height: 75vh;">

    <div class="col-lg-6">
      
      <!-- Card Container -->

      <div class="card-header text-center custom-header bg-warning">
        <h2 class="mb-0 text-black text-lg-left fw-bold text-decoration-underline">SIGN UP</h2>
      </div>

      <form method="POST" action="/signup">
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" name="email" class="form-control" id="email" required>
        </div>
        <div class="mb-3">
          <label for="name" class="form-label">Full Name</label>
          <input type="text" name="name" class="form-control" id="name" required>
        </div>
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input type="text" name="username" class="form-control" id="username" required>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" name="password" class="form-control" id="password" required>
        </div>
        <button type="submit" class="btn btn-warning w-100 fw-bold">Submit</button>
        <p class="text-center pt-3">Already have an account? <span><a href="/login" class="link-warning">Login</a></span></p>
      </form>
      <!-- End Card Container -->

      <!--error handling-->
      <% if (errorMessage) { %>
        <div class="alert alert-danger mt-3" role="alert">
          <%= errorMessage %>
        </div>
      <% } %>
    </div>
  </div>