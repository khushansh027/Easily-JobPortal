<h1>Search Results for "<%= query %>"</h1>
<ul>
    <% results.forEach(job => { %>
        <li>
            <a href="/jobs/<%= job.id %>"><%= job.position %> at <%= job.company %></a>
        </li>
    <% }) %>
</ul>

<% if (results.length === 0) { %>
    <p>No jobs found matching your search.</p>
<% } %>
